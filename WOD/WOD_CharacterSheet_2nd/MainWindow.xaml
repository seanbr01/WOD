                            <TextBox Padding="2" Margin="5 0" BorderThickness="0 0 0 1"/>
                        </StackPanel>
                    </Border>

                    <!-- Socials -->
                    <Border Grid.Column="5" BorderBrush="Black" BorderThickness=".5 .5 0 .5" Padding="1">
                        <StackPanel Grid.Column="5">
                            <TextBlock Margin="5 3" Text="Presence"/>
                            <TextBlock Margin="5 3" Text="Manipulation"/>
                            <TextBlock Margin="5 3" Text="Composure"/>

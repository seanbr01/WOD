                            <TextBox Padding="2" Margin="5 0" BorderThickness="0 0 0 1"/>
                            <TextBox Padding="2" Margin="5 0" BorderThickness="0 0 0 1"/>
                            <TextBox Padding="2" Margin="5 0" BorderThickness="0 0 0 1"/>
                        </StackPanel>
                    </Border>


                    <!-- Physicals -->
                    <Border Grid.Column="3" BorderBrush="Black" BorderThickness=".5 .5 0 .5" Padding="1">
                        <StackPanel Grid.Column="3">
                            <TextBlock Margin="5 3" Text="Strength"/>
                            <TextBlock Margin="5 3" Text="Dexterity"/>
                            <TextBlock Margin="5 3" Text="Stamina"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="4" BorderBrush="Black" BorderThickness="0 .5 .5 .5" Padding="1">

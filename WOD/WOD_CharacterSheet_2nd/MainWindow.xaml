<Window x:Class="WOD_CharacterSheet_2nd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WOD_CharacterSheet_2nd"
        mc:Ignorable="d"
        Title="MainWindow" Height="990" Width="800" Loaded="Window_Loaded">
    
    <Border Padding="20">
    
        <StackPanel Grid.Column="1">

                <!-- Base Character Info -->
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Margin="5 3" Text="Name:"/>
                        <TextBlock Margin="5 3" Text="Age:"/>
                        <TextBlock Margin="5 3" Text="Player:"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBox Padding="2" Margin="5 0" BorderThickness="0 0 0 1"/>
                        <TextBox Padding="2" Margin="5 0" BorderThickness="0 0 0 1"/>
                        <TextBox Padding="2" Margin="5 0" BorderThickness="0 0 0 1"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Margin="5 3" Text="Concept:"/>
                        <TextBlock Margin="5 3" Text="Virtue:"/>
                        <TextBlock Margin="5 3" Text="Vice:"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3">
                        <TextBox Padding="2" Margin="5 0" BorderThickness="0 0 0 1"/>
                        <TextBox Padding="2" Margin="5 0" BorderThickness="0 0 0 1"/>
                        <TextBox Padding="2" Margin="5 0" BorderThickness="0 0 0 1"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4">
                        <TextBlock Margin="5 3" Text="Chronicle:"/>
                        <TextBlock Margin="5 3" Text="Faction:"/>
                        <TextBlock Margin="5 3" Text="Group Name:"/>
                    </StackPanel>

                    <StackPanel Grid.Column="5">
                        <TextBox Padding="2" Margin="5 0" BorderThickness="0 0 0 1"/>
                        <TextBox Padding="2" Margin="5 0" BorderThickness="0 0 0 1"/>
                        <TextBox Padding="2" Margin="5 0" BorderThickness="0 0 0 1"/>
                    </StackPanel>

                </Grid>

                <!-- Attributes Header -->
                <Border BorderBrush="Black" BorderThickness="0 0 0 1" Margin="0 10 0 5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0 1 0 1" Margin="90 0" >
                        <TextBlock Text="ATTRIBUTES" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 2"/>
                        </Border>


                    </Grid>
                </Border>

                <!-- Attributes -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Margin="5 3" HorizontalAlignment="Right" Text="POWER"/>
                        <TextBlock Margin="5 3" HorizontalAlignment="Right" Text="FINESSE"/>
                        <TextBlock Margin="5 3" HorizontalAlignment="Right" Text="RESISTANCE"/>
                    </StackPanel>

                    <!-- Mentals -->
                    <Border Grid.Column="1" BorderBrush="Black" BorderThickness=".5 .5 0 .5" Padding="1">
                        <StackPanel Grid.Column="1">
                            <TextBlock Margin="5 3" Text="Intelligence"/>
                            <TextBlock Margin="5 3" Text="Wits"/>
                            <TextBlock Margin="5 3" Text="Resolve"/>
                        </StackPanel>
                    </Border>


                    <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0 .5 .5 .5" Padding="1">
